//code
#include <bits/stdc++.h>
using namespace std;
int main(){
    int i,j,n;
    cout<<"Enter the value of n: ";
    cin>>n;
    for(i=1;i<=n;i++){
        for(j=1;j<=n;j++){
            if(j>=i){
                cout<<"*";
            }
            else{
                cout<<" ";
            }
        }
        cout<<endl;
    }
    return 0;
}
