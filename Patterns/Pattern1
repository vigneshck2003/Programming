//code
#include <bits/stdc++.h>
using namespace std;
int main(){
    int i,j,n;
    cout<<"Enter the value of n: ";
    cin>>n;
    for(int i=1;i<=n;i++) //here i represents number of rows
    {
        for(int j=1;j<=n;j++) // here j represents number of columns
        {
            if(j<=i){
                cout<<"* ";
            }
            else{
                cout<<" ";
            }
        }
        cout<<endl;
    }
    return 0;
}
